
@model IEnumerable<Mise.Web.ViewModels.Termin.TerminVM>

@{
    ViewBag.Title = "Termini";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj novi termin", "Dodaj")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrijeme)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vrijeme)
        </td>
        <td>
            @Html.ActionLink("Edit", "Uredi", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Brisi", "Brisi", new { id=item.Id })
        </td>
    </tr>
}

</table>
