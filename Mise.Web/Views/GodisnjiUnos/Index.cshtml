@model Mise.Web.ViewModels.UnosGodineVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@using (Html.BeginForm("Index","GodisnjiUnos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Unos za godinu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Godina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Godina, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.Godina, new SelectList(Model.Godine,"Value", "Text", Model.Godina), new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Godina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

     </div>


}

<div>
    @Html.ActionLink("Back to List", "Index", new { god = @Model.Godine})
</div>
