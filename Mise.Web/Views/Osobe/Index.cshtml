@model IEnumerable<Mise.Web.ViewModels.Osobe.OsobaVM>

@{
    ViewBag.Title = "Index";
}

<h2>Popis osoba</h2>




    <p>
        <div class="row">
            <div class="col-md-3">
                @Html.ActionLink("Dodaj novu osobu", "Dodaj")
            </div>
            <div class="col-md-6 col-xs-6"></div>
            <div class="col-md-3">
                @using (Html.BeginForm())
            {
                    <div class="input-group">
                        @Html.TextBox("pretraga", "", new { @class = "form-control", placeholder = "Pretraži...", autofocus = ""})
                        <a href="#" class="input-group-addon"><span class="glyphicon glyphicon-search" onclick ="document.forms[0].submit"></span></a>
                    </div>
                }
            </div>
        </div>



    </p>


    <table class="table table-hover table-condensed table-bordered text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.red)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobitel)
            </th>

            <th></th>
        </tr>


        @foreach (var item in Model)
        {

            @Html.HiddenFor(modelItem => item.Id)

            <tr>


                <td style="width:50px">

                    @Html.DisplayFor(modelItem => item.red)
                </td>

                <td>
                    <img src="@Url.Content(item.Slika)" height="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobitel)
                </td>


                <td>
                    @Html.ActionLink("Uredi", "Uredi", new { id = item.Id }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Izbrisi", "Brisi", new { id = item.Id })
                </td>
            </tr>
        }

    </table>



