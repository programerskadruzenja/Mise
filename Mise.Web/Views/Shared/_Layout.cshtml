<!DOCTYPE html>
<html>
<head> 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Župa</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <link href="~/Content/Site.css?1" rel="stylesheet" type="text/css" />
    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link rel="Shortcut Icon" href="~/favicon.ico" type="image/x-icon" />
    
   

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top hidden-print">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mise župa Tisno", "Index", "Kalendar", new { area= "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Mjesta","Index", "Mjesta")</li>
                    <li>@Html.ActionLink("Osobe", "Index", "Osobe")</li>
                    <li>@Html.ActionLink("Vrsta", "Index", "Vrsta")</li>
                    <li>@Html.ActionLink("Rezervirana", "Index", "RezerviranaMisa")</li>
                    
                    <li>@Html.ActionLink("Korisnici", "Index", "Korisnik")</li>
                    <li>@Html.ActionLink("Godišnji unos", "Index", "GodisnjiUnos")</li>
                    <li>@Html.ActionLink("Ispis", "Ispis", "Kalendar")</li>

                    <li>@Html.ActionLink("Odjava", "Odjava", "Korisnik")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
       
         @RenderBody()
       <hr />
        <footer class="hidden-print">
            <p>&copy; @DateTime.Now.Year - Aplikacija Župe Tisno</p>
        </footer>
    </div>

    
    
    
</body>
</html>